{
	"name": "h4kuna/exchange-nette",
	"type": "library",
	"description": "Exchange between currencies.",
	"homepage": "https://github.com/h4kuna/exchange-nette",
	"license": "MIT",
	"authors": [
		{
			"name": "Milan Matějček",
			"email": "milan.matejcek@gmail.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=8.0",
		"h4kuna/dir": "^0.1.3",
		"h4kuna/exchange": "^7.0.6",
		"h4kuna/number-format": "^5.0",
		"latte/latte": "^3.0",
		"nette/di": "^3.0",
		"nette/http": "^3.0",
		"nette/utils": "^3.2 || ^4.0"
	},
	"require-dev": {
		"guzzlehttp/guzzle": "^7.5",
		"malkusch/lock": "^2.2",
		"nette/application": "^3.1",
		"nette/caching": "^3.2",
		"nette/tester": "^2.0",
		"phpstan/phpstan": "^1.9",
		"phpstan/phpstan-deprecation-rules": "^1.1.3",
		"phpstan/phpstan-strict-rules": "^1.4",
		"tracy/tracy": "^2.9"
	},
	"autoload": {
		"psr-4": {
			"h4kuna\\Exchange\\": "src\\"
		}
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"phpstan": "vendor/bin/phpstan analyse",
		"tests": "vendor/bin/tester -s -j 4 --colors 1 -s -C tests/src"
	}
}
